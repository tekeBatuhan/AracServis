@model AracServis.Models.IslemTur
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Guncelle", "Islemler", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">İşlem Düzenle</h2>
        </div>
        <form>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-4">
                        <label>Ad</label>
                        @Html.TextBoxFor(m => m.ad, new { @class = "form-control", @pattern = "[A-Za-Z]{1,50}", @placeholder = "Ad Giriniz", @required = "required", @title = "Lütfen [A-Z]-[a-z] Aralıgında Ve Maximum 50 Karakter Giriniz!" })
                    </div>
                    <div class="form-group col-4">
                        <label>Süre</label>
                        @Html.TextBoxFor(m => m.suresi, new { @class = "form-control", @placeholder = "Süre Giriniz", @required = "required" })
                    </div>
                    <div class="form-group col-4">
                        <label>Fiyat</label>
                        @Html.TextBoxFor(m => m.fiyat, new { @class = "form-control", @placeholder = "Fiyat Giriniz", @required = "required" })
                    </div>
                </div>

                @Html.HiddenFor(m => m.islemTurID)

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-warning">Düzenle</button>
            </div>
        </form>
    </div>
}

